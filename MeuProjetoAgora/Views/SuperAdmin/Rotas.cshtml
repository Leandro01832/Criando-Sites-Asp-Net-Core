@model IEnumerable<MeuProjetoAgora.Models.business.Rota>

@{
    ViewData["Title"] = "Rotas";
}

<h2>Rotas</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeRota)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeRota)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRota">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRota">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRota">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model MeuProjetoAgora.business.Elementos.Elemento

 @{ 
     string ele = ViewBag.elemento;
 }

<h2>Criar</h2>



<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" id="formulario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <input asp-for="Ordem" type="hidden" />
            </div>

            @if (ViewBag.elemento == "Texto")
            {
                <partial name="_Texto" />
            }

            @if (ViewBag.elemento == "Carousel")
            {
                <partial name="_Carousel" />
            }

            @if (ViewBag.elemento == "Imagem")
            {
                <partial name="_Imagem" />
            }

            @if (ViewBag.elemento == "Video")
            {
                <partial name="_Video" />
            }

            @if (ViewBag.elemento == "Link")
            {
                <partial name="_Link" />
            }

            @if (ViewBag.elemento == "Dropdown")
            {
                <partial name="_Dropdown" />
            }

            @if (ViewBag.elemento == "Formulario")
            {
                <partial name="_Formulario" />
            }

            @if (ViewBag.elemento == "Campo")
            {
                <partial name="_Campo" />
            }

            @if (ViewBag.elemento == "Table")
            {
                <partial name="_Table" />
            }

            @if (ViewBag.elemento == "musica")
            {
                <partial name="_Musica" />
            }

            @if (ViewBag.elemento == "Produto")
            {
                <partial name="_Produto" />
            }

            @if (ViewBag.elemento == "CarouselPagina")
            {
                <partial name="_CarouselPagina" />
            }

            @if (ele == "Table" || ele == "Texto" || ele == "Link" || ele == "Formulario" 
            || ele == "Carousel" || ele == "Produto" || ele == "Campo" || ele == "CarouselPagina"
            || ele == "Dropdown")
            {
                <div class="form-group">
                    <input type="button" value="Criar" onclick="ScriptElemento.Create()" class="btn btn-default" />
                </div>
            }


        </form>
    </div>
</div>

<div>

    <script src="~/js/UploadArquivos.js"></script>
    <script src="~/js/AdicionarElementosDependentes.js"></script>
    <script src="~/js/Elemento.js"></script>
    <script src="~/js/AjaxGet.js"></script>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}


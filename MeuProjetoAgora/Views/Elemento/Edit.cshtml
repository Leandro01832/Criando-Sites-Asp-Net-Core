@model MeuProjetoAgora.Models.ViewModelElemento

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Elemento</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewBag.elemento == "texto")
        {
            <partial name="_Texto" />
        }

        @if (ViewBag.elemento == "carousel")
        {
            <partial name="_Carousel" />
        }

        @if (ViewBag.elemento == "imagem")
        {
            <partial name="_Imagem" />
        }

        @if (ViewBag.elemento == "video")
        {
            <partial name="_Video" />
        }

        @if (ViewBag.elemento == "link")
        {
            <partial name="_Link" />
        }

        @if (ViewBag.elemento == "form")
        {
            <partial name="_Form" />
        }

        @if (ViewBag.elemento == "table")
        {
            <partial name="_Table" />
        }


        <div class="form-group">
            <label asp-for="div_" class="control-label"></label>
            <select asp-for="div_" class="form-control div"></select>
        </div>


        <div class="form-group">
            <input asp-for="Ordem" type="hidden" />
        </div>
        <div class="form-group">
            <input type="button" value="Criar" onclick="ScriptElemento.Update()" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <script src="~/js/Elemento.js"></script>
    <script src="~/js/AjaxGet.js"></script>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}

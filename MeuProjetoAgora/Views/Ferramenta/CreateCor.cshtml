@model MeuProjetoAgora.Models.business.Cor

<h4>Cor</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateCor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CorBackground" class="control-label"></label>
                <input asp-for="CorBackground" type="color" class="form-control" />
                <span asp-validation-for="CorBackground" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" type="range" min="0" max="100" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transparencia" class="control-label"></label>
                <input asp-for="Transparencia" type="range" min="0" max="10" class="form-control" />
                <span asp-validation-for="Transparencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackgroundGradienteId" class="control-label"></label>
                <select asp-for="BackgroundGradienteId" class ="form-control background"></select>
            </div>
            <div class="form-group">
                <input type="button" id="btn-Cor" value="Create" onclick="ScriptCor.Create();" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <script src="~/js/Cor.js"></script>
    <script src="~/js/AjaxGet.js"></script>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

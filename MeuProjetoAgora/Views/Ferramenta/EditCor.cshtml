@model MeuProjetoAgora.business.Cor

<h4>Cor</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCor" />
            <input type="hidden" id="selecionado" value="@ViewBag.selecionado" />

            <div class="form-group">
                <label asp-for="CorBackground" class="control-label"></label>
                <input asp-for="CorBackground" type="color" class="form-control" />
                <span asp-validation-for="CorBackground" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" type="range" min="0" max="100" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transparencia" class="control-label"></label>
                <input asp-for="Transparencia" type="range" min="0" max="10" class="form-control" />
                <span asp-validation-for="Transparencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BackgroundGradienteId" class="control-label"></label>
                <select asp-for="BackgroundGradienteId" class="form-control backgroundSelected"></select>
            </div>

            <div class="form-group">
                <label asp-for="Grau" class="control-label"></label>
                <input asp-for="Grau" type="range" min="0" max="360" class="form-control" />
                <span asp-validation-for="Grau" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <script src="~/js/Cor.js"></script>
    <script src="~/js/AjaxGet.js"></script>

    <script type="text/javascript">
            $(document).ready(function () {

                $("input, select").change(function () {  
                    ScriptCor.Update();      
                });
});
    </script>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

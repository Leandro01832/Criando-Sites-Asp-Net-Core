@model MeuProjetoAgora.business.Background


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Background</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBackground" />
            <input type="hidden" id="selecionado" value="@ViewBag.selecionado" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="backgroundImage" />
                        @Html.DisplayNameFor(model => model.backgroundImage)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="backgroundTransparente" />
                        @Html.DisplayNameFor(model => model.backgroundTransparente)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Gradiente" />
                        @Html.DisplayNameFor(model => model.Gradiente)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label"></label>
                <input asp-for="Cor" type="color" class="form-control" />
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background_Repeat" class="control-label"></label>
                <select asp-for="Background_Repeat">
                    <option value="repeat">Repetido</option>
                    <option value="no-repeat">Não repetido</option>
                    <option value="repeat-x">Repetido horizontalmente</option>
                    <option value="repeat-y">Repetido verticalmente</option>
                </select>
                <span asp-validation-for="Background_Repeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Background_Position" class="control-label"></label>
                <select asp-for="Background_Position">
                    <option Value="center">Posição no centro</option>
                    <option Value="left botton">Posição para baixo e esquerda</option>
                    <option Value="right botton">Posição para baixo e direita</option>
                    <option Value="left top">Posição para cima e esquerda</option>
                    <option Value="right top">Posição para cima e direita</option>
                </select>
                <span asp-validation-for="Background_Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PaginaId" type="hidden" />
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Pastas</label>
                <div class="col-md-10">
                    <select id="pastasBackground" name="pastasBackground" class="form-control pastas"></select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="imagem_" class="control-label"></label>
                <select asp-for="imagem_" class="form-control Imagem"></select>
            </div>
        </form>
    </div>
</div>

<div>
    <script src="~/js/background.js"></script>
    <script src="~/js/AjaxGet.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("input, select").change(function () {
                ScriptBackground.Update();
            });
        });
    </script>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>

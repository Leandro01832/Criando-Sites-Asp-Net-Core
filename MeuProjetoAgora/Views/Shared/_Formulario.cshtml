@model MeuProjetoAgora.business.Elementos.Formulario

<h4>Formulario</h4>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group">
    <input id="elemento" name="elemento" type="hidden" value="Formulario" />
</div>

<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div> 

<div class="jumbotron">

    <h3 class="text-primary text-center">Elementos dependentes</h3>
    <h4 class="text-primary text-center">Campos</h4>

    <div class="form-group">
        <label class="control-label">Campos</label>
        <select id="elementoEscolhido" name="elementoEscolhido" class="form-control Campo"></select>
    </div>

    <button class="AdicionarElementosDependentes" type="button">Adicionar Campos</button>


    <div class="form-group">
        <label class="control-label">Campos:</label>
        <input id="elementosDependentes" name="elementosDependentes" type="text" value="@ViewBag.elementos" />
    </div>

</div>

@if (Model != null)
{
    <div class="form-group">
        <input type="button" value="Copiar" onclick="ScriptElemento.Create()" class="btn btn-default" />
    </div>
}



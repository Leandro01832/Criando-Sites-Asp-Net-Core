@model MeuProjetoAgora.Models.business.Elemento.Table


@{
    if (ViewBag.condicao == null)
    {
        <a href="#" id="InfoVenda" class="btn btn-primary">Informar CPF</a>
        <script type="text/javascript">

            $(document).ready(function () {

                $("#InfoVenda").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarCpf/");

                });

                $("#Info2").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarInfoEntrega/");

                });

                $("#Info3").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarContaBancaria/");

                });

            });

        </script>
    }
    else if (ViewBag.condicao2 == null)
    {
        <a href="#" id="Info2" class="btn btn-primary">Informar Dados de entrega</a>
        <script type="text/javascript">

            $(document).ready(function () {

                $("#InfoVenda").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarCpf/");

                });

                $("#Info2").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarInfoEntrega/");

                });

                $("#Info3").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarContaBancaria/");

                });

            });

        </script>
    }
    else if (ViewBag.condicao3 == null)
    {
        <a href="#" id="Info3" class="btn btn-primary">Informar conta bancária para recebimento</a>
        <script type="text/javascript">

            $(document).ready(function () {

                $("#InfoVenda").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarCpf/");

                });

                $("#Info2").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarInfoEntrega/");

                });

                $("#Info3").click(function () {
                    $("#conteudomodal").load("/InfoVenda/CadastrarContaBancaria/");

                });

            });

        </script>
    }
    else
    {
        <h4>Tabela de produtos</h4>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>



        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input id="elemento" name="elemento" type="hidden" value="Table" />
        </div>
        <div class="form-group">
            <label asp-for="EstiloTabela" class="control-label"></label>
            <select asp-for="EstiloTabela" class="form-control">
                <option value="auto">tabela clara</option>
                <option value="">tabela escura</option>
                <option value="">tabela zebrada</option>
                <option value="">tabela zebrada escura</option>
                <option value="">tabela sem linhas</option>
                <option value="">tabela sem linhas escura</option>
                <option value="">tabela com destaque</option>
                <option value="">tabela com destaque escuro</option>                 
            </select>
            <span asp-validation-for="EstiloTabela" class="text-danger"></span>
        </div>

        <div class="jumbotron">

            <h3 class="text-primary text-center">Elementos dependentes</h3>
            <h4 class="text-primary text-center">Produtos</h4>

            <div class="form-group">
                <label class="control-label">Produtos:</label>
                <select id="elementoEscolhido" name="elementoEscolhido" class="form-control Produto"></select>
            </div>

            <button class="AdicionarElementosDependentes" type="button">Adicionar produtos</button>

            <div class="form-group">
                <label>produtos:</label>
                <input id="elementosDependentes" name="elementosDependentes" type="text" value="@ViewBag.elementos" />
            </div>

        </div>

        @if (Model != null)
        {
            <div class="form-group">
                <input type="button" value="Copiar" onclick="ScriptElemento.Create()" class="btn btn-default" />
            </div>
        }

       

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


        }
    }
}



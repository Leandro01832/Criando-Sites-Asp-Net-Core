@model IList<business.business.Pagina>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #esquerda {
        left: 1%;
    }

    #direita {
        right: 1%;
    }
</style>

<script src="/lib/jquery/dist/jquery.js"></script>
<br />
<br />
<br />
<div id="blocoAcesso" >
    <input type="number" id="NumeroPaginaAcesso" style="width: 100%;" placeholder="Digite o numero da pagina. Ex: 1, 2, 3, 4 ,5, 6, 7, 8, ..." />
    <a id="acessoPaginaComInput" href="/Pagina/"  class="glyphicon glyphicon-search">
        Acessar 
    </a>
</div>
    


<div id="my-carousel" class="carousel" data-ride="carousel">
    @{
        const int TAMANHO_PAGINA = 1;
        var paginas = (int)Math.Ceiling((double)Model.Count() / TAMANHO_PAGINA);

    }

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        @for (int pagina = 0; pagina < paginas; pagina++)
        {

            var PagesDaPagina = Model.Skip(pagina * TAMANHO_PAGINA).Take(TAMANHO_PAGINA).ToList();

            @foreach (var item in PagesDaPagina)
            {

                <div class="item">
                    <div class="row">
                        <div id="pagina@(item.Id)" class="Pag col-md-12 col-sm-12 col-lg-12">

                            @Html.Raw(item.Html)

                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<a class="left carousel-control" href="#my-carousel" role="button" id="esquerda" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#my-carousel" role="button" id="direita" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
</a>



@section Scripts
    {


    <script type="text/javascript">

        $(document).ready(function () {

            jQuery(function () {

                $('.item:first-child').addClass('active').show();
            });

        });

    </script>


}


@model business.business.link.LinkBody

<h4>LinkBody</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="_LinkBody" id="formulario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Site de destino</label>
                <div class="col-md-10">
                    <select id="site" name="site" class="form-control site"></select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PaginaId" class="control-label"></label>
                <select asp-for="PaginaId" class="form-control pagina" asp-items="ViewBag.PaginaId"></select>
                <span asp-validation-for="PaginaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ordem" class="control-label"></label>
                <input asp-for="Ordem" class="form-control" />
                <span asp-validation-for="Ordem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagina_" class="control-label"></label>
                <input asp-for="Pagina_" class="form-control" />
                <span asp-validation-for="Pagina_" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            @{
                if (Model.Id == 0)
                {
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                }
            }
        </form>
    </div>
</div>
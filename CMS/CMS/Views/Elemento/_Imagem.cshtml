@model business.business.Elementos.imagem.Imagem

<h4>Imagem</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="_Imagem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArquivoImagem" class="control-label"></label>
                <input asp-for="ArquivoImagem" class="form-control" />
                <span asp-validation-for="ArquivoImagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Width" class="control-label"></label>
                <input asp-for="Width" class="form-control" />
                <span asp-validation-for="Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PastaImagemId" class="control-label"></label>
                <select asp-for="PastaImagemId" class="form-control" asp-items="ViewBag.PastaImagemId"></select>
                <span asp-validation-for="PastaImagemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ordem" class="control-label"></label>
                <input asp-for="Ordem" class="form-control" />
                <span asp-validation-for="Ordem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagina_" class="control-label"></label>
                <input asp-for="Pagina_" class="form-control" />
                <span asp-validation-for="Pagina_" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            @{
                if (Model.Id == 0)
                {
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                }
            }
        </form>
    </div>
</div>
